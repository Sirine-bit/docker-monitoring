global:
  resolve_timeout: 5m

route:
  receiver: 'default'
  group_wait: 10s
  group_interval: 30s
  repeat_interval: 1h

receivers:
  - name: 'default'
    email_configs:
      - to: '{{ email.to_email }}'
        from: '{{ email.from_email }}'
        smarthost: '{{ email.smtp_server }}'
        auth_username: '{{ email.username }}'
        auth_password: '{{ email.password }}'
        auth_identity: '{{ email.username }}'
        require_tls: true

