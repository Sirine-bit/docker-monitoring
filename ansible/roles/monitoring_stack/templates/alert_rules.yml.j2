groups:
  - name: basic-alerts
    rules:
      - alert: ServiceDown
        expr: up == 0
        for: 1m
        labels:
          severity: critical
        annotations:
          summary: {% raw %}"Service is down on {{ $labels.instance }}"{% endraw %}
          description: {% raw %}"{{ $labels.job }} service is down on {{ $labels.instance }} for more than 1 minute"{% endraw %}

      - alert: HighCPUUsage
        expr: 100 - (avg by(instance) (irate(node_cpu_seconds_total{mode="idle"}[5m])) * 100) > {{ cpu_alert_threshold | default(80) }}
        for: 2m
        labels:
          severity: warning
        annotations:
          summary: {% raw %}"High CPU usage detected on {{ $labels.instance }}"{% endraw %}
          description: "CPU usage is above {{ cpu_alert_threshold | default(80) }}% for more than 2 minutes"

      - alert: HighMemoryUsage
        expr: (1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100 > {{ memory_alert_threshold | default(80) }}
        for: 5m
        labels:
          severity: warning
        annotations:
          summary: {% raw %}"High memory usage detected on {{ $labels.instance }}"{% endraw %}
          description: "Memory usage is above {{ memory_alert_threshold | default(80) }}% for more than 5 minutes"

      - alert: HighDiskUsage
        expr: (1 - (node_filesystem_avail_bytes{fstype!="tmpfs"} / node_filesystem_size_bytes{fstype!="tmpfs"})) * 100 > {{ disk_alert_threshold | default(85) }}
        for: 5m
        labels:
          severity: warning
        annotations:
          summary: {% raw %}"High disk usage detected on {{ $labels.instance }}"{% endraw %}
          description: "Disk usage is above {{ disk_alert_threshold | default(85) }}% for more than 5 minutes"